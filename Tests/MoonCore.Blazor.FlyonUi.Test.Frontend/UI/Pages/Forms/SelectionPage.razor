@page "/forms/selections"

@using MoonCore.Blazor.FlyonUi.Components
@using MoonCore.Blazor.FlyonUi.Test.Frontend.UI.Components
@using MoonCore.Blazor.FlyonUi.Test.Frontend.UI.Showcases

<NavTabs Index="2" Names="UiConstants.FormsNames" Links="UiConstants.FormsLinks" />

<div class="mt-8 mb-25">
    <div class="font-semibold text-2xl">Selection</div>
    <p class="mt-1 text-base-content/80 text-lg">
        Allow the user to select from options with advanced input components improving ux
    </p>
</div>

<div class="my-20">
    <Showcase Source="@(nameof(SelectSc))" Title="Select" Description="Default FlyonUI select">
        <SelectSc />
    </Showcase>
</div>

<div class="my-20">
    <Showcase Source="@(nameof(InputItemSc))" Title="Input Item" Description="Select one (or none) from a list of items">
        <InputItemSc />
    </Showcase>
</div>

<div class="my-20">
    <Showcase Source="@(nameof(InputItemSc2))" Title="Input Item" Description="Loading delays are handled by the component">
        <InputItemSc2 />
    </Showcase>
</div>

<div class="my-20">
    <Showcase Source="@(nameof(InputItemSc3))" Title="Input Item" Description="Search through items using serverside filtering">
        <InputItemSc3 />
    </Showcase>
</div>

<div class="my-20">
    <Showcase Source="@(nameof(InputMultiItemSc))" Title="Input Multi Item" Description="Select multiple or none items from a provided data source">
        <InputMultiItemSc />
    </Showcase>
</div>

<div class="h-36"></div>