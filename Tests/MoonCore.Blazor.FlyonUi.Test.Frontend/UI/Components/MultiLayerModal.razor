@inherits MoonCore.Blazor.FlyonUi.Modals.BaseModal

<div class="flex flex-col justify-center p-5">
    <div class="text-lg mb-3">@Text</div>
    
    @for (var i = 0; i < FillerCount; i++)
    {
        <div class="my-3">Filler</div>
    }
    
    @if (HandleNext != null)
    {
        <button @onclick="HandleNext" class="btn btn-primary">Next layer</button>
    }
    else
    {
        <div>
            No next layer
        </div>
    }
</div>

@code
{
    public Func<Task>? HandleNext { get; set; } = null;
    public string Text { get; set; }
    public int FillerCount { get; set; }
}
