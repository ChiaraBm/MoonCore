    {
        // Simulate work
        await Task.Delay(TimeSpan.FromSeconds(2));
        
        throw new HttpApiException("Whoops", 502, "This was definitely not on prupose");
    }
    
    record DemoModel
    {
        [MinLength(8, ErrorMessage = "The name must be at least 8 characters long")]
