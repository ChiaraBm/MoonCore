@using MoonCore.Blazor.FlyonUi.Forms

<InputMultipleItem TItem="DemoItem"
                   Value="SelectedItems"
                   DisplayField="@(x => x.Name)"
                   SearchField="@(x => x.Name)"
                   ItemSource="GetItemsAsync" />

@code
{
    private DemoItem[] Items;
    private List<DemoItem> SelectedItems = new();
    
    private async Task<DemoItem[]> GetItemsAsync()
    {
        await Task.Delay(TimeSpan.FromSeconds(1));
        return Items;
    }
    
    protected override void OnInitialized()
    {
        var items = new List<DemoItem>();

        for (var i = 0; i < 100; i++)
        {
            items.Add(new DemoItem()
            {
                Id = i,
                Name = $"Item {i}"
            });
        }

        Items = items.ToArray();
    }
    
    record DemoItem
    {
        public int Id { get; set; }
        public string Name { get; set; }
    }
}