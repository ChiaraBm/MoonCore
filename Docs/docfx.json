{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../Library",
          "files": ["**/bin/Debug/net9.0/**/MoonCore*.dll"],
          "exclude": ["**/bin/**/*Test*.dll"]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern",
      "templates/mooncore"
    ],
    "globalMetadata": {
      "_appName": "MoonCore",
      "_appTitle": "MoonCore",
      "_enableSearch": true,
      "_appLogoPath": "images/icon.png",
      "_appFaviconPath": "images/favicon.png",
      "pdf": false
    }
  }
}