@page "/forms"
@using MoonCore.Blazor.Tailwind.Components

<div class="mb-5">
    <NavTabs Index="0" Names="UiConstants.FormsNames" Links="UiConstants.FormsLinks" />
</div>

<div class="grid grid-cols-3 gap-5">
    <div class="col-span-1">
        <label class="text-sm font-medium mb-1">Text</label>
        <input class="form-input w-full" type="text">
    </div>

    <div class="col-span-1">
        <label class="text-sm font-medium mb-1">Number</label>
        <input class="form-input w-full" type="number">
    </div>

    <div class="col-span-1">
        <label class="text-sm font-medium mb-1">Date</label>
        <input class="form-input w-full" type="date">
    </div>

    <div class="col-span-1">
        <label class="text-sm font-medium mb-1">Checkbox</label>
        <div>
            <input class="form-checkbox" type="checkbox">
        </div>
    </div>

    <div class="col-span-1">
        <label class="text-sm font-medium mb-1">Textarea</label>
        <div>
            <textarea class="form-textarea"></textarea>
        </div>
    </div>

    <div class="col-span-1">
        <label class="text-sm font-medium mb-1">Radio</label>
        <div class="flex flex-wrap items-center -m-3">
            <div class="m-3">
                <label class="flex items-center">
                    <input type="radio" name="radio-buttons"
                           class="form-radio">
                    <span class="text-sm ml-2">Option 1</span>
                </label>
            </div>

            <div class="m-3">
                <label class="flex items-center">
                    <input type="radio" name="radio-buttons"
                           class="form-radio">
                    <span class="text-sm ml-2">Option 2</span>
                </label>
            </div>

            <div class="m-3">
                <label class="flex items-center">
                    <input type="radio" name="radio-buttons"
                           class="form-radio">
                    <span class="text-sm ml-2">Option 3</span>
                </label>
            </div>
        </div>
    </div>

    <div class="col-span-1">
        <label class="text-sm font-medium mb-1">Switch</label>
        <div class="form-switch">
            <input type="checkbox" id="switch-1" class="sr-only">
            <label for="switch-1">
                <span class="bg-white shadow-sm" aria-hidden="true"></span>
                <span class="sr-only">Switch label</span>
            </label>
        </div>
    </div>
</div>