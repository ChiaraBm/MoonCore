@inherits BaseToast

<div class="flex-shrink-0">
    <i class="icon-info text-2xl text-info"></i>
</div>
<div class="ml-3 w-0 flex-1 pt-0.5">
    <p class="text-sm font-medium text-base-content">
        @Title
    </p>
    <p class="mt-1 text-sm text-base-content/80">
        @Text
    </p>
</div>
<div class="ml-4 flex flex-shrink-0">
    <button @onclick="HideAsync" type="button"
            class="inline-flex rounded-md text-base-content/80 hover:text-base-content/60 focus:outline-none">
        <span class="sr-only">Close</span>
        <i class="icon-x"></i>
    </button>
</div>

@code
{
    /// <summary>
    /// Title of the toast
    /// </summary>
    public string Title { get; set; }
    
    /// <summary>
    /// Content of the toast
    /// </summary>
    public string Text { get; set; }
}